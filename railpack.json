{
    "$schema": "https://schema.railpack.com",
    "buildAptPackages": [
        "ca-certificates",
        "curl",
        "unzip",
        "git",
        "libzip-dev",
        "libonig-dev",
        "libxml2-dev",
        "libpng-dev",
        "libjpeg-dev",
        "libfreetype6-dev"
    ],
    "steps": {
        "prepare": {
            "commands": [
                "mkdir -p /usr/local/etc/php/conf.d",
                "mkdir -p /conf.d/",
                "apt-get update || true",
                "install-php-extensions exif gd zip || true",
                "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer || true",
                "chmod +x /usr/local/bin/composer || true",
                "/usr/local/bin/composer --version || true"
            ]
        },
        "install": {
            "commands": [
                "php /usr/local/bin/composer install --optimize-autoloader --no-scripts --no-interaction"
            ]
        }
    },
    "deploy": {
        "base": {
            "image": "dunglas/frankenphp:php8.3.27-bookworm"
        },
        "startCommand": "./start-container.sh"
    }
}
